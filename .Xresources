!! ~/.Xresources

!!
!! rxvt-unicode (urxvt)
!!

!!スクロールバーを右側
URxvt.scrollBar_right:      true
!!レールを消す
URxvt.scrollBar_floating:   true
!!rxvt plain next xterm
URxvt.scrollstyle:          plain
!!カーソル点滅
URxvt.cursorBlink:          true
!!カーソル形状
URxvt.cursorUnderline:      true
!!キーボード入力するとマウスポインタが消える
URxvt.pointerBlank:         true
!!ヴィジュアルベル
URxvt.visualBell:           true
!!バックスクロール出来る最大行数
URxvt.saveLines:            3000
!!アウトオブフォーカス時に画面を暗くする(%)
URxvt.fading:               10

!!Font
!
URxvt.font:              xft:PlemolJP35\ Console\ NF:style=Regular:size=12:antialiase=true:hinting=true
URxvt.boldFont:          xft:PlemolJP35\ Console\ NF:style=Bold:size=12:antialiase=true:hinting=true
URxvt.italicFont:        xft:PlemolJP35\ Console\ NF:style=Italic:size=12:antialiase=true:hinting=true
URxvt.bolditalicFont:    xft:PlemolJP35\ Console\ NF:style=Bold\ Italic:size=12:antialiase=true:hinting=true

!!文字間 小さい程狭い マイナスもオーケー
URxvt.letterSpace:          0
!!行間
URxvt.lineSpace:            0


